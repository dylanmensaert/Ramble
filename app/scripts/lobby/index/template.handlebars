<div>
    <h2>
        {{title}}
    </h2>

    <h3>
        ({{members.length}}/{{maxMembers}})
    </h3>

    <div>

        {{#if isOwnerOfLobby}}

        {{#linkTo "lobby.edit" this classNames="btn"}}
        Edit
        {{/linkTo}}
        {{#linkTo "lobby.delete" this classNames="btn btn-danger"}}
        Delete
        {{/linkTo}}

        {{else}}

        {{#if isMemberOfLobby}}

        <button class="btn"
        {{action "leave"}}>
        Leave
        </button>

        {{else}}

        <button class="btn"
        {{action "join"}}>
        Join
        </button>

        {{/if}}

        {{/if}}
    </div>

</div>
<div>
    <h3>
        Owner:
    </h3>

    <p>
        {{#linkTo "player" owner}}
        {{owner.username}}
        {{/linkTo}}
    </p>
</div>

<div>
    <h3 class="my-inline-block">
        Members:
    </h3>

    {{#if isOwnerOfLobby}}
    <h4 class="pull-right my-header-right">
        Kick
    </h4>
    {{/if}}

    <ul class="nav nav-tabs nav-stacked">
        {{each members itemController="player" itemViewClass="view.playerItem"}}
    </ul>
</div>
