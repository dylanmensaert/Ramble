<div>
    <h2>
        {{title}}
    </h2>

    <h3>
        ({{players.length}}/{{maxPlayers}})
    </h3>

    {{#if isOwner}}
    <div>
        {{#linkTo "lobby.edit" this classNames="btn"}}
        Edit
        {{/linkTo}}
        {{#linkTo "lobby.delete" this classNames="btn btn-danger"}}
        Delete
        {{/linkTo}}
    </div>
    {{/if}}

</div>
<div>
    <h3>
        Owner:
    </h3>

    <p>
        {{#linkTo "player" owner}}
        {{owner.username}}
        {{/linkTo}}
    </p>
</div>

<div class="pull-right">
    <button class="btn"
    {{action "leave"}}>
    Leave
    </button>
</div>

<div>
    <h3>
        Players:
    </h3>
    <table class="table table-striped">
        {{#each players itemController="player"}}
        <tr>
            <td>
                {{view view.playerItem}}
            </td>

            <!--TODO: get owner out of playerController scope-->
            {{#if isOwner}}
            <td>
                <button class="btn"
                {{action "kick" this}}>
                Kick
                </button>
            </td>
            {{/if}}

        </tr>
        {{/each}}
    </table>
</div>
