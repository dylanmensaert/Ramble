<div>
    <h2>
        {{title}}
    </h2>

    <h3>
        ({{players.length}}/{{maxPlayers}})
    </h3>

    <div>

        {{#if isOwnerOfLobby}}

        {{#linkTo "lobby.edit" this classNames="btn"}}
        Edit
        {{/linkTo}}
        {{#linkTo "lobby.delete" this classNames="btn btn-danger"}}
        Delete
        {{/linkTo}}

        {{else}}

        {{#if isJoinedPlayerOfLobby}}

        <button class="btn"
        {{action "leave"}}>
        Leave
        </button>

        {{else}}

        <button class="btn"
        {{action "join"}}>
        Join
        </button>

        {{/if}}

        {{/if}}
    </div>

</div>
<div>
    <h3>
        Owner:
    </h3>

    <p>
        {{#linkTo "player" owner}}
        {{owner.username}}
        {{/linkTo}}
    </p>
</div>

<div>
    <h3>
        Players:
    </h3>

    {{#if isOwnerOfLobby}}

    <table class="table table-striped">
        {{#each players itemController="player"}}
        <tr>
            <td>
                {{view view.playerItemTable}}
            </td>
            <td>
                <button class="btn"
                {{action "kick" this}}>
                Kick
                </button>
            </td>
        </tr>
        {{/each}}
    </table>

    {{else}}

    <ul class="nav nav-tabs nav-stacked">
    {{each players itemController="player" itemViewClass="view.playerItem"}}
    </ul>

    {{/if}}

</div>
