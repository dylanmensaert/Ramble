<div>
    <h2>
        {{title}}
    </h2>

    <h3>
        ({{amountOfPlayers}}/{{maxPlayers}})
    </h3>

    <p>
        {{#linkTo "lobby.edit" classNames="btn"}}
        Edit
        {{/linkTo}}
    </p>
</div>
<div>
    <h3>
        Owner:
    </h3>
    {{#linkTo "player" owner}}
    {{owner.name}}
    {{/linkTo}}
</div>
<div>
    <h3>
        Players:
    </h3>
    <ul class="nav nav-tabs nav-stacked">
        {{#each player in players itemController="player"}}
        <li>
            {{#linkTo "player" controller}}
            {{name}}
            <button class="delete"
            {{action "deletePlayerFromLobby" player}}>
            </button>
            {{/linkTo}}
        </li>
        {{/each}}
    </ul>
</div>
