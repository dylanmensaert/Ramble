<div class="form-inline right">
    <div>
        <label>name:
            {{view view.LoginTextField valueBinding="name" placeholder="name"}}
        </label>

        <label>password:
            {{view view.LoginTextField type="password" valueBinding="password" placeholder="password"}}
        </label>
    </div>

    <div>
        <button class="btn  btn-primary"
        {{action "login"}}>
        Login
        </button>
    </div>

    <div>
        {{#unless isValidLogin}}
        <p class="text-error">
            Login not successful
        </p>
        {{/unless}}
    </div>
</div>
