<h2>
    {{controllers.player.name}}
</h2>
<p>
    {{#linkTo "player.edit" controllers.player classNames="btn"}}
    Edit
    {{/linkTo}}
</p>
<div>
    <h3>
        Owned Lobbies:
    </h3>
    <ul class="nav nav-tabs nav-stacked">
    {{each controllers.player.ownedLobbies itemViewClass="view.lobbyItem" itemController="lobby"}}
    </ul>
</div>
<div>
    <h3>
        Joined Lobbies:
    </h3>
    <ul class="nav nav-tabs nav-stacked">
    {{each controllers.player.joinedLobbies itemViewClass="view.lobbyItem" itemController="lobby"}}
    </ul>
</div>
