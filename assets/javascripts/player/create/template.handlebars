{{#form-for this}}
    {{input username placeholder='Username' as='focussed_textfield'}}
    {{input email placeholder='Email'}}
    {{input password placeholder='Password'}}
    {{input passwordConfirmation placeholder='Password confirmation'}}

    <button {{action 'create'}} class="btn btn-primary" {{bind-attr disabled=isSaving}}>
        {{#if isSaving}}
            Signing up...
        {{else}}
            Sign up
        {{/if}}
    </button>

    {{#link-to 'index' classNames='btn btn-default'}}
        Cancel
    {{/link-to}}
{{/form-for}}
