{{#formFor this}}
    {{input title placeholder="Title" as=focus_input}}
    {{input maxMembers placeholder="Max members"}}
    {{input password placeholder="Password"}}
    {{input passwordConfirmation placeholder="Password confirmation"}}

    <button {{action "save"}} class="btn btn-primary">
        Save
    </button>

    {{#linkTo "lobby" this classNames="btn btn-default"}}
        Cancel
    {{/linkTo}}
{{/formFor}}
