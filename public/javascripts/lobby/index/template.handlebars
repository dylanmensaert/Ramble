<div>
    <h2>
        {{title}}
    </h2>

    <h3>
        ({{members.length}}/{{maxMembers}})
    </h3>

    <div>
        {{#if isOwnerOfLobby}}
            {{#link-to "lobby.edit" this classNames="btn btn-default"}}
                Edit
            {{/link-to}}

            {{#link-to "lobby.delete" this classNames="btn btn-danger"}}
                Delete
            {{/link-to}}
        {{else}}
            {{#if isMemberOfLobby}}
                <button {{action "leave"}} class="btn btn-danger">
                    Leave
                </button>
            {{else}}
                <button {{action "join"}} class="btn btn-primary">
                    Join
                </button>
            {{/if}}
        {{/if}}
    </div>
</div>

<div>
    <h3>
        Owner
    </h3>

    <p>
        {{#link-to "player" owner}}
            {{owner.username}}
        {{/link-to}}
    </p>
</div>

<div>
    <div class="row my-row-h3">
        <div class="col-xs-6">
            <span class="h3">
                Members
            </span>
        </div>

        <div class="col-xs-6">
            {{#if isOwnerOfLobby}}
                <strong class="pull-right">
                    Kick
                </strong>
            {{/if}}
        </div>
    </div>

    {{#if members.length}}
        <div class="list-group">
            {{#each members}}
                {{partial "helpers/item-player"}}
            {{/each}}
        </div>
    {{else}}
        none
    {{/if}}
</div>
