{{#formFor this}}
    {{input username placeholder="Username" as="focussed_textfield"}}
    {{input password placeholder="Password"}}

    {{#unless session.hasValidCredentials}}
        <p class="text-danger">
            Login not successful
        </p>
    {{/unless}}

    <button {{action "login"}} class="btn btn-primary">
        Log in
    </button>
{{/formFor}}
