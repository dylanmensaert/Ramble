{{#formFor this}}
    {{input username placeholder="Username" as=focus_input}}
    {{input email placeholder="Email"}}
    {{input password placeholder="Password"}}
    {{input passwordConfirmation placeholder="Password confirmation"}}

    <button {{action "save"}} class="btn btn-primary">
        Save
    </button>

    {{#linkTo "player" this classNames="btn btn-default"}}
        Cancel
    {{/linkTo}}
{{/formFor}}
