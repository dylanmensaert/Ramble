<h2>
    {{username}}
</h2>

{{#if isOwnerOfAccount}}
    <div>
        {{#linkTo "player.edit" this classNames="btn btn-default"}}
            Edit
        {{/linkTo}}

        {{#linkTo "player.delete" this classNames="btn btn-danger"}}
            Delete
        {{/linkTo}}
    </div>
{{/if}}

<div>
    <h3>
        Owned Lobbies
    </h3>

    <ul class="list-group">
        {{each ownedLobbies itemViewClass="view.lobbyItem"}}
    </ul>
</div>

<div>
    <h3>
        Joined Lobbies
    </h3>

    <ul class="list-group">
        {{each joinedLobbies itemViewClass="view.lobbyItem"}}
    </ul>
</div>
